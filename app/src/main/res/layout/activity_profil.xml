<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    android:padding="20dp"
    tools:context=".activity.ProfilActivity">

    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/email_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#aaffffff"
        tools:text="julien@email.com"
        app:layout_constraintLeft_toRightOf="@id/email_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom : "
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_title" />

    <TextView
        android:id="@+id/nom_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        tools:text="Girard"
        android:textColor="#aaffffff"
        app:layout_constraintLeft_toRightOf="@id/nom_title"
        app:layout_constraintTop_toBottomOf="@id/email_title" />

    <TextView
        android:id="@+id/prenom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrÃ©nom : "
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nom_title" />

    <TextView
        android:id="@+id/prenom_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        tools:text="Julien"
        android:textColor="#aaffffff"
        app:layout_constraintLeft_toRightOf="@id/prenom_title"
        app:layout_constraintTop_toBottomOf="@id/nom_title" />

</android.support.constraint.ConstraintLayout>